<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="store.tacomall.db.mapper.cart.CartMapper">

    <resultMap id="cart" type="store.tacomall.db.entity.cart.Cart">
        <id property="id" column="id"></id>
        <association property="merchant" column="goods_item_id" select="store.tacomall.db.mapper.merchant.MerchantMapper.getMerchantByGoodsItemId"></association>
        <association property="goodsItem" column="goods_item_id" select="store.tacomall.db.mapper.goods.GoodsItemMapper.getGoodsItemById"></association>
    </resultMap>

    <select id="getCarts" resultMap="cart">
        SELECT *
        FROM cart
        ${ew.customSqlSegment}
    </select>


</mapper>